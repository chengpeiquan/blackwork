{
  "name": "blackwork",
  "version": "0.1.0",
  "description": "Blackwork Tattoo style React UI layout (provides a unified interface for websites like @chengpeiquan 's blog).",
  "author": "chengpeiquan <chengpeiquan@chengpeiquan.com>",
  "homepage": "https://chengpeiquan.com",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "tailwind-config": [
        "./dist/tailwind-config.d.ts"
      ],
      "*": [
        "./dist/index.d.ts",
        "./dist/*"
      ]
    }
  },
  "exports": {
    "./ui-globals.css": "./dist/ui-globals.css",
    "./tailwind-config": {
      "types": "./dist/tailwind-config.d.ts",
      "import": "./dist/tailwind-config.mjs",
      "require": "./dist/tailwind-config.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react ui",
    "react component",
    "shadcn ui",
    "react layout"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "tsup",
    "build:rename": "tsx ./scripts/rename.cts",
    "diff": "npx shadcn-ui diff",
    "lint": "eslint .",
    "format": "prettier --write .",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx taze minor -r -f -w -i",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chengpeiquan/blackwork"
  },
  "dependencies": {
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.395.0",
    "vaul": "^1.0.0"
  },
  "peerDependencies": {
    "@bassist/utils": ">=0.16.0",
    "clsx": ">=2.1.1",
    "react": ">=19.0.0",
    "tailwind-merge": ">=2.5.2",
    "tailwindcss": ">=3.4.4",
    "tailwindcss-animate": ">=1.0.7"
  },
  "devDependencies": {
    "@bassist/commit": "^0.1.1",
    "@bassist/eslint": "^0.7.0",
    "@bassist/node-utils": "^0.4.1",
    "@bassist/tsconfig": "^0.1.1",
    "@bassist/utils": "^0.16.0",
    "@types/node": "^20.16.10",
    "clsx": "^2.1.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "19.0.0-rc-206df66e-20240912",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "@types/react": "npm:types-react@rc",
    "typescript": "^5.6.2",
    "unplugin-auto-import": "^0.18.3"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,astro}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
