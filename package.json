{
  "name": "blackwork",
  "version": "0.7.1",
  "description": "Blackwork Tattoo style React UI layout (provides a unified interface for websites like @chengpeiquan 's blog).",
  "author": "chengpeiquan <chengpeiquan@chengpeiquan.com>",
  "homepage": "https://chengpeiquan.com",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "tailwind-config": [
        "./dist/tailwind-config.d.ts"
      ],
      "icons": [
        "./dist/icons.d.ts"
      ],
      "form": [
        "./dist/form.d.ts"
      ],
      "*": [
        "./dist/index.d.ts",
        "./dist/*"
      ]
    }
  },
  "exports": {
    "./ui-globals.css": "./dist/ui-globals.css",
    "./tailwind-config": {
      "types": "./dist/tailwind-config.d.ts",
      "import": "./dist/tailwind-config.mjs",
      "require": "./dist/tailwind-config.cjs"
    },
    "./icons": {
      "types": "./dist/icons.d.ts",
      "import": "./dist/icons.mjs",
      "require": "./dist/icons.cjs"
    },
    "./form": {
      "types": "./dist/form.d.ts",
      "import": "./dist/form.mjs",
      "require": "./dist/form.cjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react ui",
    "react component",
    "shadcn ui",
    "react layout"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "tsup",
    "build:rename": "tsx ./scripts/rename.cts",
    "gen:changelog": "pnpm exec changelog",
    "gen:release": "pnpm exec release",
    "diff": "npx shadcn-ui diff",
    "lint": "eslint .",
    "format": "prettier --write .",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx taze minor -r -f -w -i",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chengpeiquan/blackwork"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-hover-card": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-toggle-group": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@radix-ui/react-visually-hidden": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "sonner": "^1.7.1"
  },
  "peerDependencies": {
    "@bassist/utils": ">=0.16.0",
    "@hookform/resolvers": ">=3.0.0",
    "clsx": ">=2.1.1",
    "react": ">=19.0.0",
    "react-hook-form": ">=7.0.0",
    "tailwind-merge": ">=2.5.2",
    "tailwindcss": ">=3.4.4",
    "tailwindcss-animate": ">=1.0.7"
  },
  "peerDependenciesMeta": {
    "@hookform/resolvers": {
      "optional": true
    },
    "react-hook-form": {
      "optional": true
    }
  },
  "devDependencies": {
    "@bassist/changelog": "^0.3.0",
    "@bassist/commit": "^0.1.1",
    "@bassist/eslint": "^0.7.0",
    "@bassist/node-utils": "^0.4.1",
    "@bassist/release": "^0.3.0",
    "@bassist/tsconfig": "^0.1.1",
    "@bassist/utils": "^0.16.0",
    "@hookform/resolvers": "^3.9.1",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.2",
    "clsx": "^2.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^0.18.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,astro}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}