{
  "name": "blackwork",
  "version": "1.0.0",
  "description": "Layout components in blackwork tattoo style, based on Shadcn UI.",
  "author": "chengpeiquan <chengpeiquan@chengpeiquan.com>",
  "homepage": "https://chengpeiquan.com",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "ui-globals.css": [
        "./dist/ui-globals.d.ts"
      ],
      "tailwind-config": [
        "./dist/tailwind-config.d.ts"
      ],
      "*": [
        "./dist/index.d.ts",
        "./dist/*"
      ]
    }
  },
  "exports": {
    "./ui-globals.css": "./dist/ui-globals.css",
    "./tailwind-config": {
      "import": "./dist/tailwind-config.mjs",
      "require": "./dist/tailwind-config.cjs",
      "types": "./dist/tailwind-config.d.ts"
    },
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "tsup",
    "build:rename": "tsx ./scripts/rename.cts",
    "diff": "npx shadcn-ui diff",
    "lint": "eslint .",
    "format": "prettier --write .",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx taze minor -r -f -w -i",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chengpeiquan/blackwork"
  },
  "dependencies": {
    "@bassist/utils": "^0.16.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.395.0",
    "react": "19.0.0-rc-df5f2736-20240712",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "clsx": ">=2.1.1",
    "react": ">=19.0.0",
    "tailwindcss": ">=3.4.4"
  },
  "peerDependenciesMeta": {
    "clsx": {
      "optional": true
    }
  },
  "devDependencies": {
    "@bassist/commit": "^0.1.1",
    "@bassist/eslint": "^0.7.0",
    "@bassist/node-utils": "^0.4.1",
    "@bassist/tsconfig": "^0.1.1",
    "@types/node": "^20.14.10",
    "@types/react": "npm:types-react@rc",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "unplugin-auto-import": "^0.18.0"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,astro}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}